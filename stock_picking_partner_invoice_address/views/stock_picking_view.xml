<odoo>
    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field
                    name="partner_invoice_id"
                    attrs="{'invisible':[('picking_type_code','!=','outgoing')]}"
                />
                <field
                    name="is_identical_partners"
                    attrs="{'invisible':[('picking_type_code','!=','outgoing')]}"
                    />
            </xpath>
        </field>
    </record>
    <record id="vpicktree_outgoing" model="ir.ui.view">
        <field name="name">stock.picking.tree</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="partner_invoice_id"/>
            </xpath>
        </field>
    </record>
    <record id="view_stock_picking_partner_invoice_address_search" model="ir.ui.view">
        <field name="name">stock.picking.internal.search</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search" />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='draft']" position="before">
                <filter
                    string="Same as the Invoice Address"
                    name="same"
                    domain="[('is_identical_partners', '=', 'True')]"
                />
                <filter
                    string="Different to the Invoice Address"
                    name="different"
                    domain="[('is_identical_partners', '!=', 'True')]"
                />
                <separator />
            </xpath>
        </field>
    </record>
</odoo>
